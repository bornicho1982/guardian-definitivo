<Window xmlns="https://github.com/avaloniaui" 
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        x:Class="GuardianDefinitivo.UI.MainWindow"
        Title="Guardián Definitivo"
        Width="1024" Height="768">
  <DockPanel>
    <StackPanel DockPanel.Dock="Left" Width="220" Background="#1E1E2F">
      <TextBlock Margin="10" FontSize="20" Foreground="White">🛡️ Guardián</TextBlock>
      <Button Content="Inventario" />
      <Button Content="Builds IA" />
      <Button Content="Actividades" />
      <Button Content="Comunidad" />
      <Button Content="Ghost IA" />
    </StackPanel>

    <Grid>
      <TextBlock Text="{Binding GuardianDisplayName, StringFormat='Bienvenido, {0}', FallbackValue='Bienvenido, Guardián Desconocido'}"
                 FontSize="26"
                 VerticalAlignment="Top"
                 Margin="20" />
    </Grid>
  </DockPanel>
</Window>