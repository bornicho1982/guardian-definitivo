    <!-- Define colors as resources (as per your design document) -->
    <Color x:Key="ColorArcano">#3790FF</Color>
    <SolidColorBrush x:Key="BrushArcano" Color="{StaticResource ColorArcano}"/>

    <Color x:Key="ColorSolar">#FFC857</Color>
    <SolidColorBrush x:Key="BrushSolar" Color="{StaticResource ColorSolar}"/>

    <Color x:Key="ColorVacio">#A170F0</Color>
    <SolidColorBrush x:Key="BrushVacio" Color="{StaticResource ColorVacio}"/>

    <Color x:Key="ColorBackgroundGeneral">#1E1E1E</Color>
    <SolidColorBrush x:Key="BrushBackgroundGeneral" Color="{StaticResource ColorBackgroundGeneral}"/>

    <Color x:Key="ColorTextPrincipal">#F2F2F2</Color>
    <SolidColorBrush x:Key="BrushTextPrincipal" Color="{StaticResource ColorTextPrincipal}"/>

    <Color x:Key="ColorTextSecundario">#B0B0B0</Color>
    <SolidColorBrush x:Key="BrushTextSecundario" Color="{StaticResource ColorTextSecundario}"/>

</Styles>
