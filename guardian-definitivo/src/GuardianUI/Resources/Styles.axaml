<Styles xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <!-- This style resources dictionary is imported in App.axaml. -->
    <!-- Add Naming Resource Dictionaries in here e.g: <ResourceDictionary.MergedDictionaries> <ResourceDictionary Source="/PathToYourDictionary.axaml"/> </ResourceDictionary.MergedDictionaries> -->

