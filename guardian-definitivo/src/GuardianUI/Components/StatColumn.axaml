<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="100" d:DesignHeight="300"
             x:Class="GuardianUI.Components.StatColumn">
  <StackPanel Spacing="5">
    <TextBlock Text="{Binding StatName}" FontWeight="Bold" HorizontalAlignment="Center"/>
    <ProgressBar Value="{Binding StatValue}" Maximum="100" Height="20" Foreground="{StaticResource BrushArcano}"/>
    <TextBlock Text="{Binding StatValue}" HorizontalAlignment="Center" Foreground="{StaticResource BrushTextSecundario}"/>
  </StackPanel>
  <!-- This component would need a DataContext or bindable properties for StatName and StatValue -->
</UserControl>
