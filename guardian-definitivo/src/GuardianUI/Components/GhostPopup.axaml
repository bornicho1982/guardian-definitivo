<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="300" d:DesignHeight="200"
             x:Class="GuardianUI.Components.GhostPopup">
  <Border Background="#AA1E1E1E" CornerRadius="10" Padding="15">
    <StackPanel>
      <TextBlock Text="Ghost:" FontWeight="Bold" Foreground="{StaticResource BrushArcano}"/>
      <TextBlock Text="{Binding GhostMessage}" TextWrapping="Wrap" Foreground="{StaticResource BrushTextPrincipal}"/>
      <!-- This would need a DataContext with a GhostMessage property -->
    </StackPanel>
  </Border>
</UserControl>
