<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="400" d:DesignHeight="600"
             x:Class="GuardianUI.Views.GhostDialogView"
             x:DataType="vm:GhostDialogViewModel"> <!-- Assuming a GhostDialogViewModel will be created -->
  <StackPanel>
    <TextBlock Text="Ghost Dialog Placeholder" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="10"/>
    <!-- Chat messages -->
    <ScrollViewer Height="500" Margin="10">
        <ItemsControl ItemsSource="{Binding Messages}"> <!-- Assuming Messages collection on ViewModel -->
            <ItemsControl.ItemTemplate>
                <DataTemplate>
                    <Border Background="{Binding SenderColor}" CornerRadius="5" Padding="8" Margin="5">
                         <TextBlock Text="{Binding Text}" TextWrapping="Wrap"/>
                    </Border>
                </DataTemplate>
            </ItemsControl.ItemTemplate>
        </ItemsControl>
    </ScrollViewer>
    <!-- Input area -->
    <TextBox Margin="10" Watermark="Ask Ghost..." Text="{Binding UserInput}"/>
    <Button Content="Send" Command="{Binding SendMessageCommand}" Margin="10,0,10,10"/>
  </StackPanel>
</UserControl>
