<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="using:GuardianUI.ViewModels"
        xmlns:views="using:GuardianUI.Views"
        xmlns:local="using:GuardianUI"
        x:Class="GuardianUI.Views.MainWindow"
        Icon="/Assets/icons/app_icon.ico" <!-- Placeholder, ensure you have an icon here -->
        Title="GuardiÃ¡n Definitivo"
        Width="1280" Height="720"
        WindowStartupLocation="CenterScreen">

    <Design.DataContext>
        <!-- This only sets the DataContext for the Previewer in an IDE, -->
        <!-- to set the actual DataContext for runtime, set the DataContext property in code (look at App.axaml.cs) -->
        <vm:MainWindowViewModel/>
    </Design.DataContext>

    <Grid ColumnDefinitions="Auto,*" RowDefinitions="Auto,*">
        <!-- Placeholder for Sidebar -->
        <!-- <local:Sidebar Grid.RowSpan="2" /> -->

        <!-- Placeholder for Top Bar (e.g., Player Name, Logout) -->
        <Border Grid.Column="1" Background="#2B2B2B" Padding="10">
            <TextBlock Text="Player Name / Status" Foreground="White" HorizontalAlignment="Right"/>
        </Border>

        <!-- Main Content Area -->
        <ContentControl Grid.Row="1" Grid.Column="1" Margin="10"
                        Content="{Binding CurrentView}" /> <!-- CurrentView will be a property on MainWindowViewModel -->

        <!-- Placeholder for Footer -->
        <!-- <Border Grid.Row="2" Grid.ColumnSpan="2" Background="#2B2B2B" Padding="5">
            <TextBlock Text="Version 0.1 | Credits | Bungie Status" Foreground="#B0B0B0" HorizontalAlignment="Center"/>
        </Border> -->
    </Grid>

</Window>
