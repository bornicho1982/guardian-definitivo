<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="using:GuardianUI.ViewModels"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="GuardianUI.Views.MainWindow"
        Icon="/Assets/avalonia-logo.ico" <!-- Placeholder Icon -->
        Title="Guardián Definitivo">

    <Design.DataContext>
        <!-- This only sets the DataContext for the previewer in an IDE, -->
        <!-- to set the actual DataContext for runtime, set the DataContext property in code (look at App.axaml.cs) -->
        <vm:MainWindowViewModel/>
    </Design.DataContext>

    <Grid RowDefinitions="Auto, *, Auto" ColumnDefinitions="Auto, *">
        <!-- Barra Superior -->
        <Border Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2" Background="#2B2B2B" Padding="10">
            <TextBlock Text="Nombre del Jugador / Logout Placeholder" Foreground="White" HorizontalAlignment="Right"/>
        </Border>

        <!-- Menú Lateral -->
        <Border Grid.Row="1" Grid.Column="0" Background="#252525" Width="60">
            <StackPanel Spacing="10" Margin="5">
                <Button Content="Inv" ToolTip.Tip="Inventario" Height="50" Width="50"/>
                <Button Content="Bld" ToolTip.Tip="Builds" Height="50" Width="50"/>
                <Button Content="Gst" ToolTip.Tip="Ghost AI" Height="50" Width="50"/>
                <!-- Más botones de menú -->
            </StackPanel>
        </Border>

        <!-- Panel Principal Dinámico -->
        <Border Grid.Row="1" Grid.Column="1" Background="#1E1E1E" Padding="20">
            <!-- Aquí se cargará el contenido de las vistas (InventoryView, etc.) -->
            <!-- <ContentControl Content="{Binding CurrentView}" /> -->
            <TextBlock Text="Panel Principal Dinámico Placeholder" Foreground="White" HorizontalAlignment="Center" VerticalAlignment="Center"/>
        </Border>

        <!-- Footer -->
        <Border Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="2" Background="#2B2B2B" Padding="5">
            <TextBlock Text="Guardián Definitivo v0.0.1 | Créditos | Red Bungie" Foreground="#B0B0B0" FontSize="10" HorizontalAlignment="Center"/>
        </Border>
    </Grid>
</Window>
