<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="using:GuardianUI.ViewModels"
             xmlns:modelsUi="using:GuardianDefinitivo.Models.UI"
             xmlns:components="using:GuardianUI.Components"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="600"
             x:Class="GuardianUI.Views.InventoryView"
             x:DataType="vm:InventoryViewModel">

    <Design.DataContext>
        <!-- Design-time DataContext -->
        <vm:InventoryViewModel/>
    </Design.DataContext>

    <ScrollViewer HorizontalScrollBarVisibility="Disabled" VerticalScrollBarVisibility="Auto">
        <StackPanel Spacing="20" Margin="15">

            <!-- Status Message -->
            <TextBlock Text="{Binding StatusMessage}" FontSize="14" Foreground="{StaticResource BrushTextSecundario}" Margin="0,0,0,10"/>

            <!-- Equipped Items Section -->
            <TextBlock Text="EQUIPADO" FontSize="18" FontWeight="Bold" Foreground="{StaticResource BrushTextPrincipal}"/>
            <ItemsControl ItemsSource="{Binding EquippedItems}">
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <WrapPanel Orientation="Horizontal" ItemWidth="160" ItemHeight="250"/>
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>
                <ItemsControl.ItemTemplate>
                    <DataTemplate DataType="modelsUi:InventoryItemDisplayViewModel">
                        <components:ItemCard DataContext="{Binding}" Margin="5"/>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
            <Rectangle Height="1" Fill="{StaticResource BrushTextSecundario}" Opacity="0.3" Margin="0,10"/>

            <!-- Character Items Section -->
            <TextBlock Text="INVENTARIO DEL PERSONAJE" FontSize="18" FontWeight="Bold" Foreground="{StaticResource BrushTextPrincipal}"/>
            <ItemsControl ItemsSource="{Binding CharacterItems}">
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <WrapPanel Orientation="Horizontal" ItemWidth="160" ItemHeight="250"/>
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>
                <ItemsControl.ItemTemplate>
                    <DataTemplate DataType="modelsUi:InventoryItemDisplayViewModel">
                        <components:ItemCard DataContext="{Binding}" Margin="5"/>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
            <Rectangle Height="1" Fill="{StaticResource BrushTextSecundario}" Opacity="0.3" Margin="0,10"/>

            <!-- Vault Items Section -->
            <TextBlock Text="BÃ“VEDA" FontSize="18" FontWeight="Bold" Foreground="{StaticResource BrushTextPrincipal}"/>
            <ItemsControl ItemsSource="{Binding VaultItems}">
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <WrapPanel Orientation="Horizontal" ItemWidth="160" ItemHeight="250"/>
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>
                <ItemsControl.ItemTemplate>
                    <DataTemplate DataType="modelsUi:InventoryItemDisplayViewModel">
                        <components:ItemCard DataContext="{Binding}" Margin="5"/>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>

        </StackPanel>
    </ScrollViewer>
</UserControl>
